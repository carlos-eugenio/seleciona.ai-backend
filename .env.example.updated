# Database Configuration
DATABASE_URL=mysql+pymysql://seleciona_user:seleciona_password@localhost:3306/seleciona_ai_db
# OR for SQLite (easier for development):
# DATABASE_URL=sqlite:///./seleciona_ai.db

# JWT Configuration - GENERATE YOUR OWN SECRET KEY!
SECRET_KEY=your-generated-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=2097152  # 2MB in bytes
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_EXTENSIONS=txt,pdf

# AI Configuration - OPTIONAL!
# The system works without this API key using pre-trained models
HUGGINGFACE_API_KEY=your-huggingface-api-key-here-optional
MODEL_NAME=neuralmind/bert-base-portuguese-cased

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
